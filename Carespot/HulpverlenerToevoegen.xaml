        <Label x:Name="lblEmail" Content="E-mail:" HorizontalAlignment="Left" Margin="110,335,0,0" VerticalAlignment="Top" FontSize="18.667" RenderTransformOrigin="0.917,0.67"/>
        <Label x:Name="lblTelefoon" Content="Tel nummer:" HorizontalAlignment="Left" Margin="65,370,0,0" VerticalAlignment="Top" FontSize="18.667" RenderTransformOrigin="0.917,0.67"/>
        <TextBox x:Name="tbGebruikersnaam" HorizontalAlignment="Left" Height="22" Margin="200,83,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="241"/>
        <TextBox x:Name="tbWachtwoord" HorizontalAlignment="Left" Height="22" Margin="200,123,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="241"/>
        <TextBox x:Name="tbHerhalen" HorizontalAlignment="Left" Height="22" Margin="200,163,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="241"/>
        <TextBox x:Name="tbNaam" HorizontalAlignment="Left" Height="22" Margin="200,232,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="241"/>
        <TextBox x:Name="tbEmail" HorizontalAlignment="Left" Height="22" Margin="200,343,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="241"/>
        <TextBox x:Name="tbTelefoon" HorizontalAlignment="Left" Height="22" Margin="200,378,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="241"/>
        <ComboBox x:Name="cbGeslacht" HorizontalAlignment="Left" Margin="200,268,0,0" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="lblFoto" Content="Foto:" HorizontalAlignment="Left" Margin="125,451,0,0" VerticalAlignment="Top" FontSize="18.667" RenderTransformOrigin="0.673,1.446"/>
        <Image x:Name="imgProfielfoto" HorizontalAlignment="Left" Height="150" Margin="200,456,0,0" VerticalAlignment="Top" Width="130"/>
        <Button x:Name="btUploaden" Content="Uploaden" HorizontalAlignment="Left" Margin="352,456,0,0" VerticalAlignment="Top" Width="89" Height="27" FontSize="16"/>
        <Button x:Name="btOpslaan" Content="Sla op" HorizontalAlignment="Left" Margin="352,620,0,0" VerticalAlignment="Top" Width="89" Height="27" FontSize="16"/>

