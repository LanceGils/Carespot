        <Image x:Name="image" HorizontalAlignment="Left" Height="100" Margin="147,115,0,0" VerticalAlignment="Top" Width="100"/>
        <Label x:Name="lblgebruikersnaam" Content="Gebruikersnaam:" HorizontalAlignment="Left" Margin="27,71,0,0" VerticalAlignment="Top" FontSize="18.667"/>
        <Label x:Name="lblWachtwoord" Content="Wachtwoord:" HorizontalAlignment="Left" Margin="54,111,0,0" VerticalAlignment="Top" FontSize="18.667"/>
        <Label x:Name="lblHerhalen" Content="Herhalen:" HorizontalAlignment="Left" Margin="84,151,0,0" VerticalAlignment="Top" FontSize="18.667" RenderTransformOrigin="0.917,0.67"/>
